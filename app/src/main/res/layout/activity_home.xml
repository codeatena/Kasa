        <!--android:layout_width="0dp"-->
        <!--android:layout_height="60dp"-->
        <!--app:bb_activeTabColor="@color/colorPrimaryDark"-->
        <!--app:bb_inActiveTabColor="@color/colorWeak"-->
        <!--app:bb_tabXmlResource="@xml/bottombar_tabs"-->
